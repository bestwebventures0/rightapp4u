<!-- Razorpay Automatic Checkout -->
<form action="/purchase" method="POST">
<script
    src="https://checkout.razorpay.com/v1/checkout.js"
    data-key="<%= "#{Figaro.env.MERCHANT_KEY_ID}" %>"

    data-amount="<%= "#{@cart.total_price*100}" %>"
    data-name="<%= "RightApp4U" %>"
    data-description="<%= "Best Software Deals curated for your success" %>"
    data-image="<%= image_path 'logos/favicon-256x256.png' %>"
    <% if current_user %>
      data-prefill.name="<%= "#{current_user.name}" %>"
      data-prefill.email="<%= "#{current_user.email}" %>"
    <% end %>

    data-theme.color="#F37254"
  >
  </script>
  <% if current_user %>
    <input type="hidden" value="<%= "#{current_user.id}" %>" name="user_id">
  <% end %>
  <button class="btn btn-success btn-lg" type="submit" value="Buy Now">Checkout to Pay
  </button>
</form>
